@{
    ViewData["Title"] = "Update Student Status";
}

<h1>Update Student Status</h1>

<form method="post" asp-action="UpdateStudentStatus" asp-controller="Admins">
    <div class="form-group">
        <label for="studentId">Student ID:</label>
        <input type="number" class="form-control" id="studentId" name="studentId" required>
        <!-- Input field to capture student ID -->
    </div>
    <button type="submit" class="btn btn-primary">Update Student Status</button>
</form>

