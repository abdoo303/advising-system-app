@model IEnumerable<BookQWeb.Models.Student>

@{
    ViewData["Title"] = "Active Students";
}

<h1>Active Students</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>GPA</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.FName</td>
                    <td>@student.LName</td>
                    <td>@student.Email</td>
                    <td>@student.Gpa</td>
                    <!-- Add more columns as needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No active students found.</p>
}

@section Scripts {
    <!-- Any additional scripts needed -->
}
