
@{
    ViewData["Title"] = "Add Makeup Exam";
}

<h1>Add Makeup Exam</h1>

<form id="makeupExamForm">
    <div class="form-group">
        <label for="type">Type:</label>
        <input type="text" class="form-control" id="type" name="type" required>
    </div>
    <div class="form-group">
        <label for="date">Date:</label>
        <input type="date" class="form-control" id="date" name="date" required>
    </div>
    <div class="form-group">
        <label for="courseId">Course ID:</label>
        <input type="number" class="form-control" id="courseId" name="courseId" required>
    </div>
    <button type="button" id="addMakeupExam" class="btn btn-primary">Add Makeup Exam</button>
</form>

@section Scripts {
    <script>
        document.getElementById('addMakeupExam').addEventListener('click', function () {
            var type = document.getElementById('type').value;
            var date = document.getElementById('date').value;
            var courseId = document.getElementById('courseId').value;

            if (type && date && courseId) {
                window.location.href = '/Admins/ExecuteMakeupExam?type=' + type + '&date=' + date + '&courseId=' + courseId;
            } else {
                alert('Please fill in all fields.');
            }
        });
    </script>
}
