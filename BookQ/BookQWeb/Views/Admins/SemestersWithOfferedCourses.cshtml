@model List<BookQWeb.Models.SemsterOfferedCourse> // Replace with your actual namespace

@{
    ViewData["Title"] = "Semesters with Offered Courses";
}

<h1>Semesters with Offered Courses</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Semester Code</th>
                <!-- Add more columns if needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseId</td>
                    <td>@course.Name</td>
                    <td>@course.SemesterCode</td>
                    <!-- Add more columns based on the SemsterOfferedCourse properties -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No courses found for the selected semesters.</p>
}
