@model IEnumerable<BookQWeb.Models.AssignedStudent>


<h1>Assigned Students in the selected major</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Major</th>
                <th>Course Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.student_id</td>
                    <td>@student.Student_name</td>
                    <td>@student.major</td>
                    <td>@student.Course_name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No assigned students found.</p>
}
