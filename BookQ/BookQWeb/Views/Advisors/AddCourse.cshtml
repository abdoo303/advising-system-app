<!-- Views/Advisors/AddCourse.cshtml -->
@model BookQWeb.Models.Category

<h1>Add a course</h1>

<form method="post">
    <div class="form-group">
        <label for="Code">Semester Code:</label>
        <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" />
    </div>
    <div class="form-group">
        <label for="Name">Course Name:</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" />
    </div>
    

 

    <button type="submit" class="btn btn-primary">Add Course</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
