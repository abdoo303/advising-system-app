
<!-- Views/Advisors/Home.cshtml -->
@model BookQWeb.Models.Advisor
@{
    ViewData["Title"] = "Home";
}

<style>
    .center-container {
        text-align: center;
        margin-top: 50px; /* Adjust the margin as needed */
    }

    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px; /* Adjust the margin as needed */
    }

    .btn {
        width: 200px; /* Adjust the width of the buttons as needed */
        margin-bottom: 10px; /* Adjust the spacing between buttons as needed */
    }
</style>

<div class="center-container">
    <h1>Advisor Information</h1>

    <p>Advisor ID: @Model.AdvisorId</p>
    <p>Name: @Model.AdvisorName</p>
    <p>Email: @Model.Email</p>
    <p>Office: @Model.Office</p>

    <div class="button-container">
        <a class="btn btn-primary" href="@Url.Action("Students", "Advisors")">See all your students</a>
        <a class="btn btn-primary" href="@Url.Action("ChooseMajor", "Advisors")">See your students in some major</a>
        <a class="btn btn-primary" href="@Url.Action("AllRequests", "Advisors")">View all requests</a>
        <a class="btn btn-primary" href="@Url.Action("PendingRequests", "Advisors")">View pending requests</a>
    </div>
</div>

